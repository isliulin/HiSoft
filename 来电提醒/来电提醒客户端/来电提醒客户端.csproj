  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x86'">
    <OutputPath>E:\VisualStudio\ProjectOut\CRMPhone\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="AD130Device.dll" />
